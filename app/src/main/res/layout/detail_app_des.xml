<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/detail_app_des_linearLayout"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="@string/detail_app_des"
        android:textColor="#000000"
        android:textSize="@dimen/detail_app_des"/>

    <TextView
        android:id="@+id/detail_app_des_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#80000000"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <TextView
            android:id="@+id/detail_app_des_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/detail_app_des_author"
            android:textColor="#80000000"/>

        <ImageView
            android:id="@+id/detail_app_des_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/arrow_up"/>
    </RelativeLayout>
</LinearLayout>